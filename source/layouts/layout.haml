%html
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %meta{name: "title", content: current_page.data.seo_title}
    %meta{name: "description", content: current_page.data.seo_description}
    %meta{name: "p:domain_verify", content: "058a5b7452fb9c96f6b0d4a7cf6e14c9"}

    = yield_content :opengraph

    %title= current_page.data.title || "sk√§bu"

    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag  "all"

  %body{class: page_classes}
    %header
      %nav{class: "navbar navbar-default navbar-no-margin"}
        .container
          .navbar-header
            %button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to '/index.html', class: 'navbar-brand' do
              - image_tag 'logo/skabu-logo-highres.png', height: '20', width: '54'
          %div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
            %ul(class="nav navbar-nav navbar-right")
              %li
                = link_to 'Shampoo', '/shampoo.html'
              %li
                = link_to 'Conditioner', '/conditioner.html'
              %li
                = link_to 'About Us', '/about.html'
              %li
                = link_to 'Ingredients', '/ingredients.html'
    = yield

    %footer(class="footer-main")
      .container
        %ul(class="list-inline")
          %li Copyright 2015 Alloy Brands LLC
          %li
            = link_to 'Home', '/index.html'
          %li
            = link_to 'Shampoo', '/shampoo.html'
          %li
            = link_to 'Conditioner', '/conditioner.html'
          %li
            = link_to 'About Us', '/about.html'
          %li
            = link_to 'Ingredients', '/ingredients.html'
